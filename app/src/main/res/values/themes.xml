<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Theme -->
    <style name="Base.Theme.JukaVPN" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Elevation overlay -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/elevation_overlay</item>
    </style>
    
    <!-- Main Theme -->
    <style name="Theme.JukaVPN" parent="Base.Theme.JukaVPN" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.JukaVPN.Splash">
        <item name="android:windowBackground">@color/splash_background</item>
    </style>
    
    <!-- Dialog Theme -->
    <style name="Theme.JukaVPN.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/dialog_background</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.JukaVPN.Dialog</item>
    </style>
    
    <!-- Bottom Sheet Theme -->
    <style name="Theme.JukaVPN.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">@color/surface</item>
        <item name="bottomSheetStyle">@style/Widget.JukaVPN.BottomSheet</item>
    </style>
    
    <!-- ==================== Shape Appearances ==================== -->
    
    <style name="ShapeAppearance.JukaVPN.Dialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.JukaVPN.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.JukaVPN.Card" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.JukaVPN.Chip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- ==================== Widget Styles ==================== -->
    
    <!-- Bottom Sheet Style -->
    <style name="Widget.JukaVPN.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.JukaVPN.BottomSheet</item>
        <item name="backgroundTint">@color/surface</item>
    </style>
    
    <style name="ShapeAppearance.JukaVPN.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Connect Button Style -->
    <style name="Widget.JukaVPN.Button.Connect" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/button_connect</item>
        <item name="shapeAppearance">@style/ShapeAppearance.JukaVPN.Button.Connect</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="ShapeAppearance.JukaVPN.Button.Connect" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Disconnect Button Style -->
    <style name="Widget.JukaVPN.Button.Disconnect" parent="Widget.JukaVPN.Button.Connect">
        <item name="backgroundTint">@color/button_disconnect</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.JukaVPN.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.JukaVPN.Button</item>
    </style>
    
    <!-- Text Button Style -->
    <style name="Widget.JukaVPN.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.JukaVPN.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.JukaVPN.Card</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.JukaVPN.Card.Server" parent="Widget.JukaVPN.Card">
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">12dp</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Widget.JukaVPN.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.JukaVPN.Chip</item>
    </style>
    
    <!-- Text Input Style -->
    <style name="Widget.JukaVPN.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
    <!-- Switch Style -->
    <style name="Widget.JukaVPN.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>
    
    <!-- ==================== Text Appearances ==================== -->
    
    <style name="TextAppearance.JukaVPN.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Status.Connected" parent="TextAppearance.JukaVPN.Title">
        <item name="android:textColor">@color/status_connected</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Status.Disconnected" parent="TextAppearance.JukaVPN.Title">
        <item name="android:textColor">@color/status_disconnected</item>
    </style>
    
    <style name="TextAppearance.JukaVPN.Status.Connecting" parent="TextAppearance.JukaVPN.Title">
        <item name="android:textColor">@color/status_connecting</item>
    </style>
    
    <!-- ==================== Toolbar Style ==================== -->
    
    <style name="Widget.JukaVPN.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="navigationIconTint">@color/icon_primary</item>
    </style>
    
    <!-- Legacy AppTheme for compatibility -->
    <style name="Base.AppTheme" parent="Theme.JukaVPN" />
    <style name="AppTheme" parent="Base.AppTheme" />
    
</resources>