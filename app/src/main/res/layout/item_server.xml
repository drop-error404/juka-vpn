<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Server Flag -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="36dp">

            <ImageView
                android:id="@+id/ivServerFlag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_server_flag"
                android:scaleType="fitCenter"
                android:src="@drawable/flag_unknown"/>

            <!-- Selected Overlay -->
            <ImageView
                android:id="@+id/ivServerSelected"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_selected_badge"
                android:padding="2dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@color/white"/>

        </FrameLayout>

        <!-- Server Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvServerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <!-- Protocol Badge -->
                <TextView
                    android:id="@+id/tvServerProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_protocol_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

            </LinearLayout>

            <!-- Location Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvServerLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"/>

                <!-- Latency -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/ivLatencyIndicator"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_latency_indicator"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvServerLatency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Favorito"
                android:src="@drawable/ic_favorite_outline"
                app:tint="@color/text_secondary"/>

            <!-- More Options Button -->
            <ImageButton
                android:id="@+id/btnServerMore"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cd_server_options"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/text_secondary"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
